<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 max-w-6xl mx-auto">
{{#each products}}
<div class="max-w-sm mx-auto bg-white border border-gray-200 rounded-lg shadow-md p-6">
  <h3 class="text-xl font-semibold text-gray-800 mb-2">{{name}}</h3>
  <p class="text-sm text-gray-600 mb-1"><span class="font-medium">Code:</span> {{code}}</p>
  <p class="text-sm text-gray-600 mb-1"><span class="font-medium">Category:</span> {{category}}</p>
  <p class="text-gray-700 text-sm mt-3">{{description}}</p>
</div>
{{/each}}
</div>