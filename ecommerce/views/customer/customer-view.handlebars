<table class="min-w-full table-auto">
      <thead>
        <tr class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
          <th class="py-3 px-6 text-left">Name</th>
          <th class="py-3 px-6 text-left">Email</th>
          <th class="py-3 px-6 text-center">Actions</th>
        </tr>
      </thead>
      <tbody class="text-gray-700 text-sm font-light">
        {{#each customers}}
        <tr class="border-b border-gray-200 hover:bg-gray-100">
          <td class="py-3 px-6 text-left">{{name}}</td>
          <td class="py-3 px-6 text-left">{{email}}</td>
          <td class="py-3 px-6 text-center">
            <div class="flex items-center justify-center space-x-4">
              <!-- Edit Icon -->
              <a href="#" class="text-blue-500 hover:text-blue-700" title="Edit">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536M9 11l6.586-6.586a2 2 0 012.828 0l.172.172a2 2 0 010 2.828L12 15H9v-3z" />
                </svg>
              </a>
              <!-- Delete Icon -->
              <a href="/customer/delete/{{id}}" class="text-red-500 hover:text-red-700" title="Delete">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7L5 7M6 7V19a2 2 0 002 2h8a2 2 0 002-2V7M10 11v6M14 11v6" />
                </svg>
              </a>
            </div>
          </td>
        </tr>
        {{/each}}
        <!-- Add more rows as needed -->
      </tbody>
    </table>